<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/botonToast"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="showToast"
        android:text="@string/boton_toast"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/toast_size" />

    <TextView
        android:id="@+id/Contador"
        android:layout_width="wrap_content"
        android:layout_height="327dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_weight="3"
        android:background="#4dfaff"
        android:gravity="center"

        android:text="@string/contador_inicial"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/contador_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonCount"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="496dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="Suma"
        android:text="@string/boton_count"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/count_size" />

</RelativeLayout>