<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonToast"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="445dp"
        android:background="@color/colorPrimary"
        android:onClick="showToast"
        android:text="@string/boton_toast"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/toast_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Contador"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Contador"
        android:layout_width="258dp"
        android:layout_height="268dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="429dp"

        android:background="#4dfaff"
        android:gravity="center"
        android:text="@string/contador_inicial"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/contador_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCount"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorPrimary"
        android:onClick="Suma"
        android:text="@string/boton_count"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/count_size"
        app:layout_constraintEnd_toStartOf="@+id/Contador"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>